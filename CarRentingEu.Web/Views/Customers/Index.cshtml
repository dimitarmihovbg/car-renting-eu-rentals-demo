@model IEnumerable<CarRentingEu.Dtos.CustomerDto>

@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<body class="bg-2-2">
    <div class="container page-section-ptb">
        <br />
        <h3>Customers</h3>
         <table class="table table-bordered table-hover">
              <thead>
                  <tr>
                     <th>Customer</th>
                     <th>Membership Type</th>
                     <th>Delete Customer</th>
                  </tr>
              </thead>
               <tbody>
                    @foreach (var customer in Model)
                    {
                    <tr>
                        <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)</td>
                        <td>@customer.MembershipType.Name </td>
                        <td>@Html.ActionLink("Delete", "Delete", "Customers", new { id = customer.Id })</td>
                    </tr>
                    }
               </tbody>
        </table>
          <p>
             @Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "tp-caption button red tp-resizeme" })
          </p>
    </div>
 </body>

